<% if @document.filename? %>
  <div class="document-display">
    <iframe src="/documents/<%= @document.filename %>" width="620px" height="857px">Your Browser doesn't seem to support iframes.</iframe>
  </div>
<% end %>
<% if @document.body? %>
  <div class="document-body">
    <% @document.body.each_line('') do |line| %>
      <p><%= line %></p>
    <% end %>
  </div>
<% end %>
